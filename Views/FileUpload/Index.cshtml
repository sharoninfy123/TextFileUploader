@{
    ViewData["Title"] = "File Upload";
    ViewData["Subs"] = "Upload your files here";
}
<h1>@ViewData["Title"]</h1>
<h2>@ViewData["Subs"]</h2>

<form method="post" enctype="multipart/form-data" asp-controller="FileUpload" asp-action="Index">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload files of size less than 1MB (in txt format)</p>
            <input type="file" name="files" accept=".txt" maxlength="1024"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
            @ViewBag.Message           
        </div>
    </div>
</form>
<p class="mt-4 font-monospace text-warning bg-dark fs-4">@ViewBag.Message</p>